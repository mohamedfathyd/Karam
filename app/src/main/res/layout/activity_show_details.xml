<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:local="http://schemas.android.com/apk/res-auto"
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        local:popupTheme="@style/ThemeOverlay.AppCompat.Light" >


    </androidx.appcompat.widget.Toolbar>
    <ImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativelayout1"
        android:layout_width="match_parent"

        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:layout_weight="1"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativelayout1"
        android:background="@drawable/shapewhite"
        android:layout_marginTop="-20dp"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:id="@id/name"
                        android:gravity="center"
                        android:text="تغليف"
                        android:textSize="22dp"


                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/detail"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#909090"
                        android:layout_marginTop="5dp"
                        android:textSize="15dp"
                        android:id="@+id/subName"
                        android:text="kjsdgdskjfgdsjkfhgdksjFSDFDALKSHDKJAS"

                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="20dp"
                        android:background="#909090" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_weight="6"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textSize="18dp"
                            android:text="@string/numberOf"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:weightSum="8"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="2"
                                android:id="@+id/plus"
                                android:background="@drawable/plus"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                android:textSize="19dp"
                                android:id="@+id/numOfSets"
                                android:text="1"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                />
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:id="@+id/minus"
                                android:layout_weight="2"
                                android:background="@drawable/less"
                                />
                        </LinearLayout>

                    </LinearLayout>



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="20dp"
                        android:background="#909090" />


                </LinearLayout>

            </RelativeLayout>
        </ScrollView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cart"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:id="@+id/cunti"
            android:layout_marginRight="5dp"
            android:layout_alignParentBottom="true"

            android:background="@drawable/shaperegester"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>