<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#00000000"


    android:layout_height="match_parent"
   >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="5dp"
      android:orientation="vertical">
      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:weightSum="8"
         android:layout_marginTop="11dp"
          android:layout_height="wrap_content">
          <TextView
              android:layout_width="0dp"
             android:layout_weight="7.3"
              android:layout_gravity="center"
              android:text="@string/whous"
              android:textColor="#000000"
              android:id="@+id/whous"
             android:textSize="18dp"
              android:layout_height="wrap_content" />
          <ImageView
              android:layout_width="0dp"
             android:layout_weight="0.7"
              android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
             android:layout_height="30dp" />

      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
         android:layout_marginTop="11dp"
          android:background="#909090" />

      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:weightSum="8"
         android:layout_marginTop="11dp"
          android:layout_height="wrap_content">
          <TextView
              android:layout_width="0dp"
             android:layout_weight="7.3"
              android:layout_gravity="center"
              android:text="@string/callus"
              android:id="@+id/callus"
              android:textColor="#000000"
             android:textSize="18dp"
              android:layout_height="wrap_content" />
          <ImageView
              android:layout_width="0dp"
             android:layout_weight="0.7"
              android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
             android:layout_height="30dp" />

      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
         android:layout_marginTop="11dp"
          android:background="#909090" />
      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:weightSum="8"
         android:layout_marginTop="11dp"
          android:layout_height="wrap_content">
          <TextView
              android:layout_width="0dp"
             android:layout_weight="7.3"
              android:layout_gravity="center"
              android:text="@string/terms"
              android:textColor="#000000"
              android:id="@+id/terms"
             android:textSize="18dp"
              android:layout_height="wrap_content" />
          <ImageView
              android:layout_width="0dp"
             android:layout_weight="0.7"
              android:layout_gravity="center"
              android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
             android:layout_height="30dp" />

      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
         android:layout_marginTop="11dp"
          android:background="#909090" />

      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:weightSum="8"
         android:layout_marginTop="11dp"
          android:layout_height="wrap_content">
          <TextView
              android:layout_width="0dp"
             android:layout_weight="7.3"
              android:layout_gravity="center"
              android:text="@string/lang"
              android:id="@+id/language"
              android:gravity="right"
              android:textColor="#000000"
             android:textSize="18dp"
              android:layout_height="wrap_content" />
          <ImageView
              android:layout_width="1dp"
             android:layout_weight="0.7"
              android:background="@drawable/ic_g_translate_black_24dp"
             android:layout_height="30dp" />

      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
         android:layout_marginTop="11dp"
          android:background="#909090" />
      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:weightSum="8"
         android:layout_marginTop="11dp"
          android:layout_height="wrap_content">
          <TextView
              android:layout_width="0dp"
             android:layout_weight="7.3"
              android:layout_gravity="center"
              android:text="@string/Logout"
              android:textColor="#000000"
              android:id="@+id/logout"
             android:textSize="18dp"
              android:layout_height="wrap_content" />
          <ImageView
              android:layout_width="1dp"
             android:layout_weight="0.7"
              android:background="@drawable/ic_power_settings_new_black_24dp"
             android:layout_height="30dp" />

      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
         android:layout_marginTop="11dp"
          android:background="#909090" />
  </LinearLayout>

</FrameLayout>